* {
	--files-width: 85vw;
}

.file-list {
	min-width: calc(var(--files-width) / 3);
	max-width: none;
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
	flex-grow: 1;
	flex-shrink: 1;
	overflow: hidden;
	padding: 2rem;
	/* height: 50vh; */
}

.wrapper-horizontal {
	display: flex;
	flex-direction: row;
	margin-inline: 2rem;
	margin-block: 1rem;
	gap: 1rem;
	height: 87vh;
	padding: 0;
}

.wrapper-horizontal > * {
	border-radius: 1rem;
}


.logout-button {
	width: 10rem;

	border: 2px solid gray;
	padding: 0.6rem 2rem; 
	border-radius: 20rem;

	background-color: transparent;
	transition: background-color 0.2s;

	color: var(--color-info-dark)
}

.logout-button:hover {
	/* background-color: rgba(150, 0, 0, 5); */
	background-color: var(--color-info-light);
}

nav {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 1rem;
	margin-top: 2rem;
	margin-inline: 2rem;
	border-radius: 10px;
}

nav h1 {
	font-size: 1.5rem;
}

nav h1 span {
	font-weight: 700;
}

/* width */
::-webkit-scrollbar {
  width: 10px;
	position: absolute;
}

/* Track */
::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 10px;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 10px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #555;
}

.file-header {
	height: 40rem;
	padding-inline: 2rem;
	padding-block-start: 2rem;
	/* position: absolute; */
}

.file-header h1 {
	font-size: 1.5rem;
}

.file-details-header {
	padding-inline: 2rem;
	padding-block-start: 2rem;
}

.file-details {
	height: 100%;
	overflow: hidden;
	padding-inline: 1rem;
	padding-bottom: 1rem;
}

.file-details > div {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	overflow-y: auto;
	overflow-x: hidden;
	width: 100%;
	padding: 1rem;
}

.file-details h1 {
	font-size: 1.25rem;
}

.file-info {
	width: 25rem;
	transition: width 0.25s;
	/* padding: 2rem; */
}

.file-info > div {
	height: 100%;
	display: flex;
	flex-direction: column;
	overflow-y: hidden;
	overflow-x: hidden;
}