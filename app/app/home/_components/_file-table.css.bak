.file-table {
	cursor: default;
	overflow: hidden;
	margin-top: 1rem;
	width: 100%;
}

.file-table > tbody {
	overflow-y: scroll;
	position: relative;
}

.file-table td, .file-table th {
	margin-block: 0.7rem;
}

.width-0 {
	width: 0;
	padding: 0;
	margin: 0;
	overflow: hidden !important;
}

.width-0 * {
	opacity: 0;
}

.info-button {
	border-radius: 50%;
	padding: 0.4rem;
}

.info-button:hover {
	background-color: var(--color-light);
}

.file-icon-centered {
	margin: 5rem;
	display: flex;
	justify-content: center;
	align-items: center;
	scale: 450%;
}

.file-access {
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
}

.access-list {
	display: flex;
	gap: 0.5rem;
}

.access-list p {
	/* border-right: 1px solid black; */
	padding-inline-end: 0.25rem;
	padding-block-end: 1rem;
}

.vertical-line {
	width: 0.2rem;
	background-color: var(--color-dark);
	height: 100%;
}

.ft-btn {
	border: 2px solid gray;
	border-radius: 2rem;
	padding: 0.5rem 0.1rem;
	color: var(--color-info-dark);
	font-size: 0.9rem;
}

.ft-btn:hover {
	background-color: var(--color-info-light);
}

.file-info-name {
	display: flex;
	gap: 0.5rem;
	text-wrap: wrap;
	word-wrap: break-word;
	word-break: break-all;
  width: 100%;
}

.file-info-name textarea {
  /* width: 100%; */
  border: 2px solid var(--color-dark);
  border-radius: 5px;
  /* height: 2rem; */
  resize: none;
  padding: 0.2rem;
}

.horizontal-divider {
	width: 100%;
	height: 1px;
	background-color: gray;	
	margin-block: 1.5rem;
	padding-inline: 0;
}

.file-details {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	margin-top: 1rem;
}

.file-detail-header {
	font-weight: 600;
}

.file-detail-description {
	/* background-color: var(--color-alt); */
	padding-top: 0.5rem;
	border: 1px solid gray;
	border-radius: 5px;
	height: 5rem;
	width: 100%;
	padding: 0.5rem;
	resize: none;
  margin-top: 0.5rem;
}

.file-detail-description:focus {
  outline: none !important;
  border: 2px solid var(--color-info-dark);/* #719ECE; */
  box-shadow: 0 0 5px var(--color-info);
  padding: 0.5rem;
}

.name-field {
	gap: 1rem;
	display: flex;
	text-align: left;
	font-weight: 400;
	margin-left: 0.5rem;
	flex-grow: 1;
	/* max-width: 40rem;
	min-width: 35rem; */
	/* min-width: 10rem; */
}

.name-field > div {
	/* cursor: text; */
	flex-grow: 1;
}

.filename-input {
	border: none;
	outline: none !important;
	background-color: transparent;
	border-bottom: 1px solid var(--color-dark);
	width: 100%;
	height: 1.4rem;
}

.file-table-updating {
	color: orange;
	background-color: orange;
}

.file-table-row {
	border-bottom: 1px solid var(--color-dark);
}

.file-table-row:hover { 
	background-color: var(--color-light);
}

.file-table-row-selected, .file-table-row-selected:hover {
	background-color: var(--color-info-light);
}

.file-action-wrapper {
	background-color: #f0f4f8;
	padding: 2px;
	border-radius: 20px;
}

.file-action-bar {
	display: flex;
	align-items: center;	
	/* justify-content: center; */
}

.file-action-bar input {
	cursor: pointer;
}

.progress-wrapper {
	height: 0.2rem;
	display: flex;
	border-radius: 3px;
}

.progress {
	background-color: var(--color-info);
	transition: width 0.4s;
	justify-self: center;
	margin-inline: 1rem;
	border-radius: 3px;
}

.file-table-1,
.file-table-2,
.file-table-3,
.file-table-4 {
	width: 8rem;
}

.file-table-4 {
	width: 1rem;
}

.file-table-1 {
	width: 5rem;
}

@media (max-width: 1500px) {
	.file-table-1 {
		display: none
	}
}

@media (max-width: 1400px) {
	.file-table-2 {
		display: none
	}
}

@media (max-width: 1300px) {
	.file-table-3 {
		display: none
	}
}

.file-table-wrapper {
	max-height: 5rem;
	width: 100%;
}